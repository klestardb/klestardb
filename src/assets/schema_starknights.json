{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "$defs": {
    "elementType": {
      "enum": [ "炎", "水", "雷", "光", "闇" ]
    },
    "raceType": {
      "enum": [ "人間", "魔族", "神族" ]
    },
    "roleType": {
      "enum": [ "ATK", "SPD", "DEF", "SUP", "HEAL" ]
    },
    "weaponType": {
      "enum": [ "斬撃", "打撃", "魔法" ]
    },
    "factionType": {
      "enum": [ "新星学園", "流星学園", "流星学園附属", "守護天使", "ネビュラ", "コラプサー", "その他", "" ]
    },
    "gradeType": {
      "enum": [ "1年生", "2年生", "3年生", "教師・その他" ]
    },

    "buffType": {
      "enum": [
        "ATK", "クリティカル確率", "クリティカルダメージ", "ノックバック軽減", "ノックバック無効", "カウンター",
        "ノーツ前進", "ノーツ移動", "行動CT", "EX上昇", "消費EX減少", "バリア(HP)", "バリア(回数)", "チャージ", "ステルス", "サブ属性"
      ]
    },
    "debuffType": {
      "enum": [
        "ATK", "重さ", "ノックバック増加", "ノーツ強制移動", "CT延長", "ダメージ増加", "毒", "麻痺", "混乱", "萎縮", "封印", "火傷", "凍傷"
      ]
    },
    "targetType": {
      "enum": [ "自身", "単体", "範囲", "種族", "属性", "全体" ]
    }
  },

  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "date",
      "name",
      "element",
      "race",
      "role",
      "weapon",
      "hp",
      "ex",
      "atk",
      "crit",
      "exup",
      "ctmin",
      "ctmax",
      "skills"
    ],
    "additionalProperties": false,
    "properties": {
      "id": { "type": "integer" },
      "date": { "type": "string" },
      "name": { "type": "string" },
      "cv": { "type": "string" },
      "star": { "type": "integer" },
      "faction": { "$ref": "#/$defs/factionType" },
      "grade": { "$ref": "#/$defs/gradeType" },
      "element": { "$ref": "#/$defs/elementType" },
      "race": { "$ref": "#/$defs/raceType" },
      "role": { "$ref": "#/$defs/roleType" },
      "weapon": { "$ref": "#/$defs/weaponType" },
      "hp": { "type": "number" },
      "ex": { "type": "number" },
      "atk": { "type": "number" },
      "crit": { "type": "number" },
      "exup": { "type": "number" },
      "ctmin": { "type": "number" },
      "ctmax": { "type": "number" },
      "skills": { "type": "array" },
      "tags": { "type": "array" },
      "note": { "type": "string" }
    }
  }
}
